---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props as Props;

import liIcon from '../../../assets/icons/linkedin-blog-post-shareicon.svg?raw';
import ghIcon from '../../../assets/icons/github-icon.svg?raw'; 
import mailIcon from '../../../assets/icons/contact-icon.svg?raw';    
---

<div class="sw-share group flex items-center gap-3">
  {/* LinkedIn */}
  <a 
    href="https://www.linkedin.com/in/teo-castellvi" 
    target="_blank" 
    rel="noopener noreferrer" 
    class="sw-share-btn hover:text-[color:var(--accent)] transition-colors" 
    aria-label="LinkedIn" 
    set:html={liIcon} 
  />
  
  {/* GitHub */}
  <a 
    href="https://github.com/TeoCastellvi" 
    target="_blank" 
    rel="noopener noreferrer" 
    class="sw-share-btn hover:text-[color:var(--accent)] transition-colors" 
    aria-label="GitHub" 
    set:html={ghIcon} 
  />
  
  {/* Email */}
  <a 
    href="mailto:teocastellvi.m@gmail.com" 
    class="sw-share-btn hover:text-[color:var(--accent)] transition-colors" 
    aria-label="Email" 
    set:html={mailIcon} 
  />
</div>